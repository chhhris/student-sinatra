<body class="home page students">
  <!-- Begin Main Wrapper -->
  
  <!-- Beging Header -->
  <div class="mod-header">
    <a href="/" % style="line-height: 100px;"><< Home page</a>
      <h1 class="logo-text">
        <a href="/" title="The Flatiron School">
          <img src="/img/the-flatiron-school-logo-sm-black.png" class="logo">
        </a>
      </h1>
  </div>
    <!-- End Header -->
    <!-- Begin Content -->
    <div class="container">
      <!-- Begin Title Content -->
      <div class="page-title">
        <h2>Every Story Has Heroes</h2>
        <h3>We're <%= @students.size %> people on a journey to learn to love code.</h3>
      </div>
      <!-- End Title Content -->

      <!-- Begin Student Index -->
      <div id="random-full-width-content" class="this-div-is-just-a-helpful-container">
        <div class="section section-services student-index">
        <div class="section-title">
            <span>Flatiron School Class 003</span>
        </div>
    </div>

    <div class="section section-blog">
       <div class="home-blog clearfix">
          <ul>
          <!-- Begin 3 Student Row -->
            <% @students.each do |student| %>
              <li class="home-blog-post">
                
                  <div class="blog-thumb">
                    <a href="/students/<%= student.id %>" target="0"><img src="http://students.flatironschool.com/students/team-rogue/img/billgates.jpg" class="attachment-blog-thumb wp-post-image" alt=""></a>
                  </div>
                  <div class="blog-title">
                    <div class="big-comment">
                      <h3><a href="/students/<%= student.id %>" target="0"><%= student.name %></a></h3>
                    </div>
                    <p class="home-blog-post-meta"><%= student.tagline %></p>
                  </div>
                  <div class="clear"></div>
                  <div class="excerpt">
                    <p><%= student.bio %></p>
                  </div>
                <div class="clear"></div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</body>